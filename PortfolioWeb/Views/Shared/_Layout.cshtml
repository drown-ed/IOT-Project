<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolioWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioWeb.styles.css" asp-append-version="true" />

    <link href="https://fonts.googleapis.com/css?family=Mukta:300,400,500,600,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/vendors/fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/live-resume.css">

    <script>
        // nav menu active
    </script>
</head>
<body>
    <header>
        <button class="btn btn-white btn-share ml-auto mr-3 ml-md-0 mr-md-auto" onclick="copyToClipboard('https://github.com/drown-ed/');">
            <img src="~/images/share.svg" alt="share" class="btn-img">
            SHARE
        </button>
        <nav class="collapsible-nav" id="collapsible-nav">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">HOME</a>
            <a asp-area="" asp-controller="Resume" asp-action="Index" class="nav-link">RESUME</a>
            <a asp-area="" asp-controller="Portfolio" asp-action="Index" class="nav-link">PORTFOLIO</a>
            <a asp-area="" asp-controller="Blog" asp-action="Index" class="nav-link">BLOG</a>
            <a asp-area="" asp-controller="Contact" asp-action="Index" class="nav-link">CONTACT</a>
        </nav>
        <button class="btn btn-menu-toggle btn-white rounded-circle" data-toggle="collapsible-nav"
                data-target="collapsible-nav">
            <img src="~/images/hamburger.svg" alt="hamburger">
        </button>
    </header>
    <div class="content-wrapper">
        <aside>
            <div class="profile-img-wrapper">
                <img src="~/images/profile.jpg" alt="profile">
            </div>
            <h1 class="profile-name">Oh Yurina</h1>
            <div class="text-center">
                <span class="badge badge-white badge-pill profile-designation">Computer Programmer</span>
            </div>
            <nav class="social-links">
                <a href="https://mail.google.com/mail/?view=cm&amp;fs=1&amp;to=fight1999club@gmail.com" class="social-link"><i class="fab fa-google"></i></a>
                <a href="https://github.com/drown-ed" class="social-link"><i class="fab fa-github"></i></a>
                <a href="https://open.spotify.com/user/31xp4doechs46vpklhbjhyhje7mq?si=2ec050c993294e0c" class="social-link"><i class="fab fa-spotify"></i></a>
            </nav>
            <div class="widget">
                <h5 class="widget-title">personal information</h5>
                <div class="widget-content">
                    <p>BIRTHDAY : 13 March 1998</p>
                    <p>PHONE : +82 010 9803 3487</p>
                    <p>MAIL : fight1999club@gmail.com</p>
                </div>
            </div>
            <div class="widget card">
                <div class="card-body">
                    <div class="widget-content">
                        <h5 class="widget-title card-title">LANGUAGES</h5>
                        <p>C, C++ C#</p>
                        <p>Java, Python</p>
                    </div>
                </div>
            </div>
            <div class="widget card">
                <div class="card-body">
                    <div class="widget-content">
                        <h5 class="widget-title card-title">INTERESTS</h5>
                        <p>Book</p>
                        <p>Theatre</p>
                        <p>Video games</p>
                    </div>
                </div>
            </div>
        </aside>
        <main>
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/vendors/popperjs/core/dist/umd/popper-base.min.js"></script>
    <script src="~/vendors/vendors/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/live-resume.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
